@page "/"
@using MenuPlanner.Shared.models
@using MenuPlanner.Shared.models.Search
@inject NavigationManager NavigationManager
@inject PublicClient PublicClient

<MenuSearch Results="@menus" ResultsChanged="@MenusChanged"></MenuSearch>
<AuthorizeView>
    <Authorized>
        <a href="/AddEditDeleteMenu/" class="btn btn-info" role="button">Add Menu</a>
    </Authorized>
</AuthorizeView>

<hr />

<h3>Menus</h3>

@if (menus == null)
{
    <p><em>Loading...</em></p>
}
else if (menus.Count == 0)
{
    <p><em>No menus found with current search</em></p>
}
else
{
    <div class="row">

        @foreach (var menu in menus)
        {
            <MenuCard Menu="@menu"></MenuCard>
        }

    </div>
}



