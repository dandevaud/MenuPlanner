@page "/ingredientList"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using MenuPlanner.Shared.models
@inject HttpClient Http
@attribute [Authorize]

<button class="btn btn-primary" @onclick="AddIngredient">
    Add Ingredient
</button>

<h3>Ingredients</h3>

@if (ingredients == null)
{
    <p><em>Loading...</em></p>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Calories</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ingredient in ingredients)
            {
                <tr>
                    <td>@ingredient.Name</td>
                    <td>@ingredient.Category</td>
                    <td>@ingredient.Calories</td>
                    <td>@ingredient.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Ingredient[] ingredients;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ingredients = await Http.GetFromJsonAsync<Ingredient[]>("api/Ingredients");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }

}

@code {
    private async Task AddIngredient(MouseEventArgs e)
    {
        await Http.PostAsJsonAsync<Ingredient>("api/Ingredients", new Ingredient { Name = "Test Ingredient" });
    }
}
