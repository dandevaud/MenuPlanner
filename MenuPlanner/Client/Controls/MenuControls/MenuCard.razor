@using MenuPlanner.Shared.models

<div class="card" style="width: 18rem;">
    <Carousel Images="@Menu.Images"></Carousel>
    <div class="card-body">
        <h5 class="card-title">@Menu.Name</h5>
        <StarRating Menu="@Menu" IsEditable="false"></StarRating>
        <p class="card-text">@Menu.Description</p>
    </div>
    <div class="card-footer">
        <a href="ShowMenu/@Menu.MenuId" class="btn btn-primary">Show</a>
        <a href="AddEditMenu/@Menu.MenuId" class="btn btn-info">Edit</a>
        <a href="DeleteMenu/@Menu.MenuId" class="btn btn-danger">Delete</a>
    </div>
</div>

@code {

    [Parameter]
    public Menu Menu { get; set; }

}
